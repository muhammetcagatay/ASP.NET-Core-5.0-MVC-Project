@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 style="color:white">@SharedLocalizer["Registerr"]</h2>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-light"></div>
            <div class="form-group">
                <label style="color:#D8D8D8">@SharedLocalizer["Name"]</label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8">@SharedLocalizer["Surname"]</label>
                <input asp-for="Input.SurName" class="form-control" />
                <span asp-validation-for="Input.SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8">@SharedLocalizer["Email"]</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8">@SharedLocalizer["Password"]</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8"> @SharedLocalizer["VerifyPassword"]</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8"> @SharedLocalizer["BirthDate"]</label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8"> @SharedLocalizer["Country"]</label>
                <input asp-for="Input.Country" class="form-control" />
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#D8D8D8"> @SharedLocalizer["PhotoURL"]</label>
                <input asp-for="Input.PhotoURL" class="form-control" />
                <span asp-validation-for="Input.PhotoURL" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"> @SharedLocalizer["Registerr"]</button>
        </form>
    </div>
    <div class="col-md-4"></div>

</div>

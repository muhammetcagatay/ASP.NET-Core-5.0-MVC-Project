@model WebProgrammingMovie.Models.Rating

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:white">Yorum Yap</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="color:white" asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <label for="pet-select">Choose a pet:</label>

            <div class="form-group">
                <label style="color:white" asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.MovieId)

            <div class="form-group">
                <a asp-controller="Movie" asp-action="Index" asp-route-id="@Model.MovieId"><input type="submit" value="Create" class="btn btn-primary"</input> </a>
            </div>

            <div>
                <a asp-controller="Movie" asp-action="Index" asp-route-id="@Model.MovieId">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
